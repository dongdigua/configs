source "gpg -dq $HOME/.config/mutt/.pwd-mutt.gpg |"

# user identity
set from = $my_user
set realname = "Digua Dong"
set use_from = yes

# smtp
set smtp_authenticators = "login"
set smtp_url = smtps://$my_user@smtp.mail.ru:465
set smtp_pass = $my_pass

# imap
set imap_authenticators = "login"
set folder = imaps://imap.mail.ru:993/
set imap_user = $my_user
set imap_pass = $my_pass

# refresh
set ssl_starttls = yes
set mail_check = 120
unset imap_passive

# mailbox
set spoolfile = +INBOX
set record = +Sent
set trash = +Trash
set postponed = +Drafts
mailboxes =INBOX =Sent =Trash =Drafts

# custom
color normal default default # just for transparency
set sort=threads
set sort_aux=reverse-last-date-received
set editor=vi
